<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPrescription">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <TextView
        android:id="@+id/textView"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="76dp"
        android:gravity="center"
        android:text="New Prescription"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Prescription no: "
        android:textColor="@android:color/background_dark"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/prescrpt_no"
        android:layout_width="174dp"
        android:layout_height="29dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="94dp"
        android:layout_toEndOf="@+id/textView3"
        android:gravity="center"
        android:text="prescription number"
        android:textColor="@android:color/background_dark"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="77dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="23dp"
        android:gravity="center"
        android:text="Name :"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prescrpt_no"
        android:layout_marginStart="32dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/textView5"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <ImageButton
        android:id="@+id/mic_name"
        android:layout_width="38dp"
        android:layout_height="41dp"
        android:layout_below="@+id/prescrpt_no"
        android:layout_marginStart="24dp"
        android:layout_marginTop="21dp"
        android:layout_toEndOf="@+id/name"
        app:srcCompat="@android:drawable/ic_btn_speak_now" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="73dp"
        android:layout_height="37dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:text="Age :"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/age"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:layout_toEndOf="@+id/textView6"
        android:ems="10"
        android:hint="age"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="73dp"
        android:layout_height="37dp"
        android:layout_below="@+id/name"
        android:layout_marginStart="30dp"
        android:layout_marginTop="36dp"
        android:layout_toEndOf="@+id/age"
        android:gravity="center"
        android:text="Sex"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/sex"
        android:layout_width="140dp"
        android:layout_height="71dp"
        android:layout_below="@+id/mic_name"
        android:layout_marginStart="3dp"
        android:layout_marginTop="26dp"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Symptoms :"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/symptoms"
        android:layout_width="298dp"
        android:layout_height="136dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="71dp"
        android:ems="10"
        android:gravity="top"
        android:hint="symptoms"
        android:inputType="textMultiLine" />

    <ImageButton
        android:id="@+id/mic_symptoms"
        android:layout_width="38dp"
        android:layout_height="41dp"
        android:layout_below="@+id/sex"
        android:layout_marginStart="36dp"
        android:layout_marginTop="87dp"
        android:layout_toEndOf="@+id/symptoms"
        app:srcCompat="@android:drawable/ic_btn_speak_now" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/symptoms"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:text="Diagnosis :"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/diagnosis"
        android:layout_width="298dp"
        android:layout_height="90dp"
        android:layout_below="@+id/symptoms"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="65dp"
        android:ems="10"
        android:gravity="top"
        android:hint="diagnosis"
        android:inputType="textMultiLine" />

    <ImageButton
        android:id="@+id/mic_diagnosis"
        android:layout_width="38dp"
        android:layout_height="41dp"
        android:layout_below="@+id/symptoms"
        android:layout_marginStart="33dp"
        android:layout_marginTop="91dp"
        android:layout_toEndOf="@+id/diagnosis"
        app:srcCompat="@android:drawable/ic_btn_speak_now" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/diagnosis"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="150dp"
        android:text="Next"
        android:textColor="@android:color/background_dark" />

</RelativeLayout>
</ScrollView>