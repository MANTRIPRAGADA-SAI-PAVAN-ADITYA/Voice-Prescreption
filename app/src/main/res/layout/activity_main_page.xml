<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage">

    <TextView
        android:id="@+id/textView"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="100dp"
        android:text="WELCOME :"
        android:textColor="@android:color/background_dark"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/DocName"
        android:layout_width="171dp"
        android:layout_height="53dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="120dp"
        android:gravity="center"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp" />

    <Button
        android:id="@+id/newPrescrpt"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="60dp"
        android:text="New Prescription" />

    <Button
        android:id="@+id/Hist"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/newPrescrpt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="60dp"
        android:text="Prescription History" />

    <Button
        android:id="@+id/PatientInfo"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Hist"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="60dp"
        android:text="Patients History" />

    <Button
        android:id="@+id/abtme"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/PatientInfo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="59dp"
        android:text="About Me" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="145dp"
        android:layout_height="131dp"
        android:layout_below="@+id/DocName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="134dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="134dp"
        app:srcCompat="@android:drawable/sym_def_app_icon" />
</RelativeLayout>